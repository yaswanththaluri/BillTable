<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#3a6592</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeOptions" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_home</item>
        <item name="android:elevation">10dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="settings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#3a6592</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">25sp</item>
    </style>


</resources>
